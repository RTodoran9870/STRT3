<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/dayID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hourID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dayID"
                android:paddingTop="5dp"
                android:text="7:00"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TableRow
                android:id="@+id/tableID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Switch
                    android:id="@+id/switchID"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingRight="10dp" />
            </TableRow>

            <TableRow
                android:id="@+id/TableID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/hourID"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/RingtoneId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="42dp"
                    android:maxWidth="42dp"
                    android:paddingTop="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_action_name" />

                <TextView
                    android:id="@+id/RingtoneTextID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="14dp"
                    android:text="Ringtone"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_alignBaseline="@id/TableID1"
                android:layout_below="@+id/tableID">


                <TextView
                    android:id="@+id/VibrateTextID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vibrate"
                    android:textSize="16sp"
                    android:layout_marginTop="29dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/VibrateID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="42dp"
                    android:maxWidth="42dp"
                    android:paddingTop="9dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_vibration_42px" />
            </TableRow>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>